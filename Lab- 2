# Marks, Average, Grade

def student_result(m1, m2, m3):
    marks = [m1, m2, m3]
    total = sum(marks)
    average = total / 3
    grades = []

    def get_grade(m):
        if m == 'Absent':
            return 'NA'
        m = int(m)
        if m <= 39: return 'F'
        elif m <= 44: return 'P'
        elif m <= 49: return 'C'
        elif m <= 54: return 'B'
        elif m <= 59: return 'B+'
        elif m <= 69: return 'A'
        elif m <= 79: return 'A+'
        elif m <= 100: return 'O'

    for mark in marks:
        if mark == 'Absent':
            grades.append('NA')
        else:
            grades.append(get_grade(mark))

    fail = any(mark != 'Absent' and int(mark) <= 39 for mark in marks)

    print(f"Total: {total}, Average: {average}")
    print(f"Grades: {grades}")
    print("Result: Fail" if fail else "Result: Pass")

student_result(45, 'Absent', 60)
